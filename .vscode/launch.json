    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Debug Tests",
            "type": "debugpy",
            "request": "launch",
            "console": "integratedTerminal",
            "purpose": [
                "debug-test"
            ],
            "program": "${file}",
            "env": {
                "PYTORCH_JIT": "0",
                // "CUDA_LAUNCH_BLOCKING": "1",
            },
            "justMyCode": false,
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "${workspaceFolder}"
                }
            ]
        } 
    ]
}